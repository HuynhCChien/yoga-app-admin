<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Title -->
    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_instances"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Search EditText -->
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by teacher name"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Add New Class Button -->
    <Button
        android:id="@+id/buttonAddNewClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_class"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView to show list of class instances -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClassInstances"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- TextView for Empty State -->
    <TextView
        android:id="@+id/textViewEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_class_instances_available"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
